# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/pincraftwp

# External APIs (TUS PROPIAS CLAVES)
REPLICATE_API_TOKEN=your_replicate_api_token_here
OPENAI_API_KEY=your_openai_api_key_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRE=30d

# Stripe Configuration (para billing)
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# API Configuration
API_DOMAIN=https://api.pincraftwp.com
FRONTEND_URL=https://pincraftwp.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Image Generation Settings
IDEOGRAM_MODEL=ideogram-ai/ideogram-v3-turbo
MAX_PINS_PER_REQUEST=10
IMAGE_WIDTH=1080
IMAGE_HEIGHT=1920

# Plans Configuration (l√≠mites mensuales)
PLAN_FREE_LIMIT=10
PLAN_PRO_LIMIT=200
PLAN_AGENCY_LIMIT=1000